{
  "name": "salam",
  "version": "1.0.1",
  "description": "pack and extract zip archives middleware",
  "main": "server/index.js",
  "scripts": {
    "test": "tape test/**/*.js",
    "watch:test": "nodemon -w test -w server --exec npm test",
    "lint": "redrun -p lint:*",
    "lint:client": "eslint --config .client.eslintrc client",
    "lint:server": "eslint server test",
    "coverage": "nyc npm test",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "watch:coverage": "redrun watcher:test -- \"redrun coverage\"",
    "watcher:test": "nodemon -w client -w server",
    "6to5:lib": "BABEL_ENV=server babel server -d legacy",
    "wisdom": "npm run build",
    "build": "redrun mkdir build:server build:client:shake:min build:socket.io:min",
    "build:server": "redrun 6to5:*",
    "build:socket.io": "rollup -u io -c .socket.io.rollup.js -m -f iife -o dist/socket.io.js",
    "build:socket.io:min": "NODE_ENV=production redrun build:socket.io",
    "build:client:shake": "BABEL_ENV=rollup rollup -u salam -c .rollup.js -m -f umd -o dist/salam.js",
    "build:client:shake:min": "NODE_ENV=production npm run build:client:shake",
    "watch:client:shake": "npm run build:client:shake -- -w",
    "watch:client:shake:min": "npm run build:client:shake:min -- -w",
    "watch:lint:bin": "redrun watcher:js -- \"redrun lint:bin\"",
    "watch:lint:client": "redrun watcher:js -- \"redrun lint:client\"",
    "watch:lint:server": "redrun watcher:js -- \"redrun lint:server\"",
    "watch": "redrun -p watch:*",
    "watcher:js": "nodemon -w client -w server -w common -w .rollup.js -x",
    "mkdir": "mkdirp dist"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/node-salam.git"
  },
  "keywords": [
    "pack",
    "extract",
    "archive",
    "zip",
    "emitter",
    "file",
    "middleware"
  ],
  "author": "coderaiser <mnemonic.enemy@gmail.com> (http://coderaiser.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coderaiser/node-salam/issues"
  },
  "homepage": "https://github.com/coderaiser/node-salam",
  "dependencies": {
    "currify": "^2.0.0",
    "express": "^4.14.0",
    "jaguar": "^3.0.0",
    "mellow": "^2.0.0",
    "onezip": "^1.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "coveralls": "^2.11.11",
    "emitify": "^2.1.1",
    "eslint": "^3.10.2",
    "freeport": "^1.0.5",
    "load.js": "^1.1.4",
    "nodemon": "^1.11.0",
    "nyc": "^9.0.1",
    "redrun": "^5.0.1",
    "rollup": "^0.36.1",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-filesize": "^1.0.0",
    "rollup-plugin-json": "^2.0.2",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-globals": "^1.0.9",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "tape": "^4.6.0"
  }
}
